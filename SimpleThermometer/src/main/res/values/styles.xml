<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="android:actionBarWidgetTheme">@style/AppTheme.ActionBarWidgetTheme</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
        <item name="actionBarWidgetTheme">@style/AppTheme.ActionBarWidgetTheme</item>
    </style>

    <style name="AppTheme.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/black_translucent</item>
        <!-- Support library compatibility -->
        <item name="background">@color/black_translucent</item>
    </style>

    <style name="AppTheme.PopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@color/black_translucent_dark</item>
    </style>

    <style name="AppTheme.ActionBarWidgetTheme" parent="Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/AppTheme.PopupMenu</item>
        <!-- Support library compatibility -->
        <item name="popupMenuStyle">@style/AppTheme.PopupMenu</item>
    </style>

</resources>